---
interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content="Página web personal" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />

        <link rel="stylesheet" href="assets/css/main.css" />
        <title>{title}</title>
    </head>
    <body class="is-preload">
        <header id="header">
            <div class="inner">
                <a href="#" class="image avatar">
                    <img src="images/avatar.webp" alt="" />
                </a>
                <h1>José A. Domínguez</h1>
                <p>Aplicando la informática al mundo real</p>
            </div>
        </header>

        <div id="main">
            <slot />
        </div>

        <footer id="footer">
            <div class="inner">
                <ul class="icons">
                    <li>
                        <a
                            href="https://www.linkedin.com/in/is03651"
                            class="icon brands fa-linkedin"
                            target="_blank"
                        >
                            <span class="label">LinkedIn</span>
                        </a>
                    </li>
                    <li>
                        <a
                            href="https://github.com/is03651"
                            class="icon brands fa-github"
                        >
                            <span class="label">Github</span>
                        </a>
                    </li>
                    <li>
                        <a
                            href="mailto:jdominguez.web@outlook.com"
                            class="icon solid fa-envelope"
                        >
                            <span class="label">Email</span>
                        </a>
                    </li>
                </ul>
                <ul class="copyright">
                    <li>&copy; José A. Domínguez López</li>
                    <li>Design: <a href="http://html5up.net">HTML5 UP</a></li>
                </ul>
            </div>
        </footer>

        <!-- Scripts -->
        <script is:inline src="assets/js/jquery.min.js"></script>
        <script is:inline src="assets/js/jquery.poptrox.min.js"></script>
        <script is:inline src="assets/js/browser.min.js"></script>
        <script is:inline src="assets/js/breakpoints.min.js"></script>
        <script is:inline src="assets/js/util.js"></script>
        <script is:inline src="assets/js/main.js"></script>

        <!-- Google tag (gtag.js) -->
        <script
            is:inline
            async
            src="https://www.googletagmanager.com/gtag/js?id=G-204F2QHT9Q"
        ></script>
        <script is:inline src="assets/js/analytics.js"></script>
    </body>
</html>
